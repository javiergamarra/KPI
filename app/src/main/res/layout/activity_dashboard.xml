<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/github_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:elevation="4dp"
        android:minHeight="200dp"
        card_view:cardCornerRadius="4dp">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/github"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

    </android.support.v7.widget.CardView>

    <fragment
        android:id="@+id/films_fragment"
        android:name="com.nhpatt.kpi.fragments.FilmsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/github_card_view" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/shows_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/films_card_view"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:elevation="4dp"
        card_view:cardCornerRadius="4dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shows"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
